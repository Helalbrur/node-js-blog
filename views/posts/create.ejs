<% layout('layouts/main') %>

<h1>Create a New Post</h1>
<hr>
<form method="POST" action="/posts">
    <div class="form-group">
        <label for="title">Title</label>
        <input class="form-control" type="text" id="title" name="title" placeholder="Enter post title">
    </div>
    <div class="form-group">
        <label for="body">Body</label>
        <textarea class="form-control" id="body" name="body" placeholder="Enter post body"></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Create Post</button>
</form>
