<% layout('layouts/main') %>
<h1>Roles</h1>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% roles.forEach(role => { %>
      <tr>
        <td><%= role.name %></td>
        <td>
          <a href="/roles/<%= role.id %>/edit">Edit</a>
          <form action="/roles/<%= role.id %>?_method=DELETE" method="POST" style="display: inline-block;">
            <button type="submit">Delete</button>
          </form>
        </td>
      </tr>
    <% }) %>
  </tbody>
</table>
<a href="/roles/create">Create Role</a>
